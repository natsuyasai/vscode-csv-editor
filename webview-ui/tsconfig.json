{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@message/*": [
        "../src/message/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vitest/globals",
    ]
  },
  "include": [
    ".storybook/**/*",
    "./src/**/*",
    "./test/**/*",
    "./stories/**/*",
    "__mocks__"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
  ]
}