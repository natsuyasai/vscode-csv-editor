{
  "name": "csv-editor",
  "displayName": "csv-editor",
  "description": "edit csv",
  "version": "0.0.4-alpha5",
  "repository": {
    "url": "https://github.com/natsuyasai/vscode-csv-editor"
  },
  "publisher": "natsuyasai",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "csv-editor.openEditor",
        "displayName": "CSV Editor",
        "selector": [
          {
            "filenamePattern": "*.csv"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "csv-editor.openEditor",
        "title": "Open CSV Editor"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "csv-editor.openEditor",
          "when": "resourceExtname == .csv && editorLangId == plaintext",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && npm run build:webview && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.33.0"
  }
}